<parameter name="SSLProfiles" xmlns:svns="http://org.wso2.securevault/configuration">
    <profile>
        <bindAddress>{{keystore.listener_profile.bind_address}}</bindAddress>
         <KeyStore>
            <Location>repository/resources/security/{{keystore.tls.file_name}}</Location>
            <Type>{{keystore.tls.type}}</Type>
            <Password>{{keystore.tls.password}}</Password>
            <KeyPassword>{{keystore.tls.key_password}}</KeyPassword>
        </KeyStore>
        <TrustStore>
            <Location>repository/resources/security/{{truststore.file_name}}</Location>
            <Type>{{truststore.type}}</Type>
            <Password>{{truststore.password}}</Password>
        </TrustStore>
        <SSLVerifyClient>{{keystore.listener_profile.ssl_verify_client}}</SSLVerifyClient>
        <HttpsProtocols>{{transport.passthru_https.listener.parameters.HttpsProtocols}}</HttpsProtocols>
        {% if transport.passthru_https.listener.parameters.PreferredCiphers is defined %}
        <PreferredCiphers>{{transport.passthru_https.listener.parameters.PreferredCiphers}}</PreferredCiphers>
        {% endif %}
    </profile>
</parameter>

