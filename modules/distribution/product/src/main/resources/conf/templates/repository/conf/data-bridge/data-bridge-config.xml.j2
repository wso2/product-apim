        <config name="tcpPort">{{databridge.receiver.binary.tcp_port}}</config>
        <config name="sslPort">{{databridge.receiver.binary.ssl_port}}</config>
        <config name="sslReceiverThreadPoolSize">{{databridge.receiver.binary.ssl_receiver_threadpool_size}}</config>
        <config name="tcpReceiverThreadPoolSize">{{databridge.receiver.binary.tcp_receiver_threadpool_size}}</config>
