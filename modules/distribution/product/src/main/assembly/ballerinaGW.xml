<assembly>
    <includeBaseDirectory>false</includeBaseDirectory>
    <id>Ballerina Gateway Distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${basedir}/target/ballerina/ballerina-platform-${ballerina.platform.version}</directory>
            <outputDirectory>wso2am-ballerina-gw-${pom.version}</outputDirectory>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>wso2am-ballerina-gw-${pom.version}/bre/lib</outputDirectory>
            <scope>runtime</scope>
            <includes>
                <include>org.wso2.carbon.apimgt:org.wso2.carbon.apimgt.ballerina.gateway:jar</include>
            </includes>
        </dependencySet>

    </dependencySets>

</assembly>
