{
    "category": "Mediation",
    "name": "apkMirrorRequest",
    "version": "v1",
    "displayName": "Mirror Request",
    "description": "This policy allows you to mirror a request to various URLs",
    "policyAttributes": [
        {
            "name": "url",
            "displayName": "URL",
            "description": "URL to mirror the request to",
            "validationRegex": "^(([\\w+]+\\:\\/\\/)?([\\w\\d-]+\\.)*[\\w-]+([\\.\\:]\\w+)*([\\/\\?\\=\\&\\#\\.]?[\\w-]+)*\\/?)$",
            "type": "String",
            "required": true
        }
    ],
    "applicableFlows": [
        "request"
    ],
    "supportedGateways": [
        "ChoreoConnect"
    ],
    "supportedApiTypes": [
        "HTTP"
    ]
}