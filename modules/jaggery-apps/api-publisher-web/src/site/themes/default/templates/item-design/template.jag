                    </div>
                </div>
    </fieldset>
                <div id="api_designer">
                    <div id ="resource_details"></div>
                </div>            


                <input type="hidden" name="action" value="design" />
                <input type="hidden" id="swagger" name="swagger" value="" />
                <div class="form-actions" style="display:none" id="saveMessage">
