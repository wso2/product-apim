            </includes>
        </dependencySet>

        <!-- Cipher tool specific artifacts -->
        <dependencySet>
            <outputDirectory>bre/lib/bootstrap/tools/ciphertool</outputDirectory>
            <includes>
                <include>org.wso2.carbon.secvault:org.wso2.carbon.secvault.ciphertool:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
